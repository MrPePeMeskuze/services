<% provide(:title, 'Создание нового пользователя') %>
<h1>Регистрация</h1>
<div class="center header">
	<div class="contacts-block-line">
		<%= form_for :user, :url => { :action => :create } do |f| %>
			<%= render 'shared/error_messages' %>
      		<%= f.hidden_field :save, value: 1 %>
   			<%= f.label :login, "Логин" %>
			<%= f.text_field :login, class: "callback" %>

			<%= f.label :email %>
			<%= f.email_field :email, class: "callback" %>

			<%= f.label :name, "Имя" %>
			<%= f.text_field :name, class: "callback" %>

			<%= f.label :last_name, "Фамилия" %>
			<%= f.text_field :last_name, class: "callback" %>

			<%= f.label :middle_name, "Отчество" %>
			<%= f.text_field :middle_name, class: "callback" %>

			<%= f.label :password, "Пароль" %>
			<%= f.password_field :password, class: "callback" %>

			<%= f.label :password_confirmation, "Подтверждение пароля" %>
			<%= f.password_field :password_confirmation, class: "callback" %>

			<div class="btn-large">
				<%= f.submit "Создать пользователя" %>
			</div>
		<% end %>
	</div>
</div>
