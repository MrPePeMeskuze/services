	<meta charset="utf-8">
	<title><%= yield(:title) %></title>
	<%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
	<body>
		<div id="all">
			<div class="top-panel">
				<div class="top-panel-inner center">
					<input type="text" placeholder="Поиск" class="search" />
					<div class="authorization">
					 	<input type="text" placeholder="Логин" class="logon">
					 	<input type="password" placeholder="Пароль" class="logon">
					 	<a class="btn" href="#">Войти </a>
					</div>
				</div>
			</div>
			<div class="header">
				<div class="head-content clearfix center">
					<div class="float">
						<a href="/">
							<img src="/images/logo.png" alt="Логотип">
						</a>
					</div>
					<div class="head-contacts">
						8 800 555-22-53<br/>
						<span>8 495 540-52-37</span><br />
						<a href="mailto:info@ardi-typography.ru">info@ardi-typography.ru</a>
					</div>
					<div class="menu-top">
						<ul>
								<li><a href>Ссылка</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="main center">
				<%= yield %>
			</div>
			<div class="hFooter"></div>
		</div>
		<div id="footer">
			<div class="footer-content center">
				<div class="footer-copyright">© 2015 ООО <span class="quotes">«</span>Арди<span class="quotes">»</span></div>
					<div class="footer-adress">124460 г. Зеленоград, 2-й Западный пр-д., д. 1, стр. 1, офис 205</div>
			</div>
		</div>
	</body>
</html>
