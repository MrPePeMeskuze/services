<% provide(:title, 'Услуги') %>
<div class="main-services clearfix">
	<h1 class="line">
		<a href>Услуги</a>
	</h1>
	<% @services.each do |service| %>							
		<div class="main-service">
			<%= image_tag(service.image.general_thumb.url) if service.image? %>
			<div class="main-more-info">
				<ul>
					<% @childrens = Services.where(parent_id: service.id).order(:position) %>
					<% @childrens.each do |children| %>
						<li><%= link_to children.header, children %></li>
					<% end %>
				</ul>
			</div>
			<h2 class="addpadding"><%=link_to service.header, service %></h2>
		</div>
	<% end %>
</div>
<div class="margin"></div>